<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TODO-List</title>
    <link rel="stylesheet" href="CSS/styles.css" />
  </head>
  <body>


    <div class="box" id="heading"><h1><%= listTitle %></h1></div>
    <!--now create a list for todo list-->
    <ul>
      <!--a loop will be used to create a seperate entry for each item in todo list-->
  
        <div class="box">
      <% newListItems.forEach(function(newItem){ %>
    <form action="/delete" method="post" >    <div class="item">
                <input type="checkbox" onChange="this.form.submit()" value="<%=newItem._id%>" name="checkbox">
     <p><%= newItem.name %></p></div>
    <% }) %>
</form>
    
    </ul>
 <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="new item"/>
      <button type="submit" name="button">+</button>
    </form>
      </div>
     
   
  </body>
</html>
